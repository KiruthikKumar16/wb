# MQTT Broker (defaults are fine for public HiveMQ)
# BROKER_HOST=broker.hivemq.com
# BROKER_PORT=1883

# Twilio configuration (optional - if not set, SMS are printed to console)
# Get from https://www.twilio.com/
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=+1xxxxxxxxxx
TWILIO_ENABLE_CALLS=false
TWILIO_CALL_MESSAGE=This is an automated safety alert. Please check on the sender immediately.

# Comma-separated list of destination numbers (include country code)
# Example: +9198xxxxxxxx,+91yyyyyyyyyy
EMERGENCY_NUMBERS=

# MQTT topics (server)
# TOPIC_SOS=wearable/+/sos
# TOPIC_STATUS=wearable/+/status
# TOPIC_TAMPER=wearable/+/tamper

# Server behavior
RATE_LIMIT_SECONDS=120
RETRY_ATTEMPTS=3


